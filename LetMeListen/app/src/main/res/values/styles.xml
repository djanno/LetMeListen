<resources>
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_not_selected_with_shadow</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_basic</item>
        <item name="colorAccent">#2ecc71</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#95a5a6</item>
    </style>


    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>
</resources>
