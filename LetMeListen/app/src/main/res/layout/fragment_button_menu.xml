<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/buttonMenu">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="@string/Artists"
            android:id="@+id/artistButton"
            android:background="@drawable/button_selected"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="@string/Albums"
            android:id="@+id/albumButton"
            android:layout_alignBottom="@+id/artistButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_not_selected"
            android:layout_marginLeft="-7dp"
            android:textColor="#000000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="@string/Tracks"
            android:id="@+id/trackButton"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/albumButton"
            android:background="@drawable/button_not_selected"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="-7dp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/infoLayout"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/artisticon7"
            android:id="@+id/imageInfo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imageInfo"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:id="@+id/infoField"
            />
    </RelativeLayout>




</LinearLayout>